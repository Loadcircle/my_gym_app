rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // FUNCIONES HELPER
    // ============================================

    // Verifica si el usuario esta autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Verifica si el usuario es el propietario del documento
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ============================================
    // CATALOGO DE EJERCICIOS
    // ============================================

    // Ejercicios - lectura para autenticados, escritura para seed inicial
    match /exercises/{exerciseId} {
      allow read: if isAuthenticated();
      // Permitir crear/delete para seed y re-seed
      allow create, delete: if isAuthenticated();
      // No permitir update desde cliente
      allow update: if false;
    }

    // ============================================
    // REGISTROS DE PESO
    // ============================================

    match /weightRecords/{recordId} {
      // Lectura: autenticado + query debe filtrar por su userId
      // (la app siempre filtra por userId en el query)
      allow read: if isAuthenticated();

      // Puede crear registros con su userId
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.weight > 0;

      // Puede actualizar/eliminar sus propios registros
      allow update, delete: if isAuthenticated()
                            && resource.data.userId == request.auth.uid;
    }

    // ============================================
    // DATOS DE USUARIO
    // ============================================

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;

      // Subcoleccion: weight_logs (alternativa)
      match /weight_logs/{logId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ============================================
    // REGLA POR DEFECTO: denegar todo lo demas
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

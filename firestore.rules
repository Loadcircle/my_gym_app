rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // FUNCIONES HELPER
    // ============================================

    // Verifica si el usuario esta autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Verifica si el usuario es el propietario del documento
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ============================================
    // CONFIGURACION DE LA APP
    // ============================================

    // app_config - lectura para autenticados (config remota)
    match /app_config/{configId} {
      allow read: if isAuthenticated();
      allow write: if false; // Solo desde consola/admin
    }

    // ============================================
    // CATALOGO DE EJERCICIOS
    // ============================================

    // Ejercicios - lectura para autenticados, escritura para seed inicial
    match /exercises/{exerciseId} {
      allow read: if isAuthenticated();
      // Permitir crear/delete para seed y re-seed
      allow create, delete: if isAuthenticated();
      // No permitir update desde cliente
      allow update: if false;
    }

    // ============================================
    // REGISTROS DE PESO
    // ============================================

    match /weightRecords/{recordId} {
      // Lectura: autenticado + query debe filtrar por su userId
      // (la app siempre filtra por userId en el query)
      allow read: if isAuthenticated();

      // Puede crear registros con su userId
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.weight > 0;

      // Puede actualizar/eliminar sus propios registros
      allow update, delete: if isAuthenticated()
                            && resource.data.userId == request.auth.uid;
    }

    // ============================================
    // DATOS DE USUARIO
    // ============================================

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;

      // Subcoleccion: weight_logs (alternativa)
      match /weight_logs/{logId} {
        allow read, write: if isOwner(userId);
      }

      // Subcoleccion: customExercises (ejercicios personalizados)
      match /customExercises/{exerciseId} {
        // Solo el owner puede leer sus ejercicios
        allow read: if isOwner(userId);

        // Solo el owner puede crear, con validaciones
        allow create: if isOwner(userId)
                      // userId en el documento debe coincidir con el path
                      && request.resource.data.userId == userId
                      // Campos requeridos no vacios
                      && request.resource.data.name is string
                      && request.resource.data.name.size() > 0
                      && request.resource.data.muscleGroup is string
                      && request.resource.data.muscleGroup.size() > 0
                      // proposalStatus debe ser 'none' al crear
                      && request.resource.data.proposalStatus == 'none'
                      // Timestamps deben existir
                      && request.resource.data.createdAt is timestamp
                      && request.resource.data.updatedAt is timestamp;

        // Solo el owner puede actualizar, con restricciones
        allow update: if isOwner(userId)
                      // No puede cambiar userId
                      && request.resource.data.userId == resource.data.userId
                      // Usuario no puede cambiar proposalStatus a 'approved' (solo admin)
                      && (request.resource.data.proposalStatus != 'approved'
                          || resource.data.proposalStatus == 'approved')
                      // Usuario no puede asignar linkedGlobalExerciseId (solo admin)
                      && (request.resource.data.linkedGlobalExerciseId == null
                          || request.resource.data.linkedGlobalExerciseId == resource.data.linkedGlobalExerciseId);

        // Solo el owner puede eliminar sus ejercicios
        allow delete: if isOwner(userId);
      }
    }

    // ============================================
    // REGLA POR DEFECTO: denegar todo lo demas
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

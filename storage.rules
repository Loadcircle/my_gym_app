rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Media por defecto - lectura publica
    match /default/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Imagenes y videos de ejercicios - lectura publica, escritura solo admin
    match /exercises/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Archivos de usuario (futuro)
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
